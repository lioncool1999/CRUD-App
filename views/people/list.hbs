<h1>CRUD APP for People</h1>

<h3><a class="btn btn-secondary" href="/"><i class="fa fa-plus"></i> Create New</a></h3>
<h3><a class="btn btn-danger" href="/list/deleteAll"><i class="fa fa-minus"></i> Delete ALL</a></h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>S.No.</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.index}}</td>
            <td>{{this.firstname}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.email}}</td>
            <td>
                <a href="/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>