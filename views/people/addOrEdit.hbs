<h3>{{viewTitle}}</h3>

<form action="/" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{people._id}}">
    <div class="form-group">
        <label>S.No.</label>
        <input type="text" class="form-control" name="index"  value="{{people.index}}">
        <div class="text-danger">
            {{people.indexError}}</div>
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstname"  value="{{people.firstname}}">
        <div class="text-danger">
            {{people.lastnameError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" value="{{people.lastname}}">
        </div>
        <div class="form-group col-md-6">
            <label>Email</label>
            <input type="email" class="form-control" name="email"  value="{{people.email}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>